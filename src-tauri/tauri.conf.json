{
  "$schema": "https://schema.tauri.app/config/2.0.0",
  "productName": "tauri_template",
  "version": "0.1.0",
  "identifier": "com.tobiasrosskopf.dev",
  "build": {
    "beforeDevCommand": "yarn dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "yarn build",
    "frontendDist": "../dist"
  },
  "bundle": {
    "active": true,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "targets": "all"
  },
  "app": {
    "security": {
      "csp": null
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "tauri_template",
        "width": 800,
        "height": 600
      }
    ]
  },
  "plugins": {
    "cli": {
      "beforeHelp": "TAURI TEMPLATE CLI",
      "description": "CLI for tauri_template",
      "longDescription": "This is the command line interface for tauri_template.",
      "args": [
        {
          "name": "verbose",
          "short": "v",
          "description": "Verbose output"
        }
      ],
      "subcommands": {}
    }
  }
}
